generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum AuthRole {
  ADMIN
  HR 
  EMPLOYEE 
  CANDIDATE
}

model User {
  id Int @id @default(autoincrement())
  user_id String @unique
  email String @unique
  password String @unique
  authrole AuthRole
  createdAt DateTime @default(now())

  @@unique([user_id, authrole])
}