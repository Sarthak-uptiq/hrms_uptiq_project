{
  "compilerOptions": {
    // Essential paths for your project structure
    "rootDir": "./src",
    "outDir": "./dist",

    // Modern settings for a Node.js ESM project
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",

    // Core TypeScript settings
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}