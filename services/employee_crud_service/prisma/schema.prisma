generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Emp_Status {
  ACTIVE
  INACTIVE
  TERMINATED
}

enum Policy_Ack {
  ACKNOWLEDGED
  PENDING
}


model employee {
  emp_id    String    @id @default(uuid())
  name      String
  email     String    @unique
  city      String?
  state     String?
  pincode   String?
  dep_id    Int
  role_id   Int
  status    Emp_Status
  policy_ack_status Policy_Ack
  createdAt DateTime  @default(now())

  // relations
  department department @relation(fields: [dep_id], references: [dep_id])
  role       role       @relation(fields: [role_id], references: [role_id])
  documents  emp_docu_mapping[]   // 1 employee → many docs
}

model documents {
  doc_id   Int    @id @default(autoincrement())
  doc_type String @unique

  // back relation
  emp_docs emp_docu_mapping[]
}

model emp_docu_mapping {
  id      Int    @id @default(autoincrement())
  emp_id  String
  doc_id  Int
  doc_url String

  // relations
  emp employee  @relation(fields: [emp_id], references: [emp_id])
  doc documents @relation(fields: [doc_id], references: [doc_id])

  @@unique([emp_id, doc_id]) // an employee can’t upload the same doc twice
}

model department {
  dep_id   Int      @id @default(autoincrement())
  dep_name String   @unique

  // back relation
  employees employee[]
}

model role {
  role_id     Int     @id @default(autoincrement())
  role_name   String  @unique
  total_ctc   Float
  base_salary Float
  bonus       Float
  allowance   Float

  // back relation
  employees employee[]
}
